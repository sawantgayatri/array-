#include <iostream>

int main() {
    // 1. Declare and initialize an integer array of size 5
    int numbers[5] = {10, 20, 30, 40, 50};

    // 2. Access and modify an element (e.g., update the third element)
    numbers[2] = 100; // Index 2 is the third element

    // 3. Print all elements using a loop
    std::cout << "Updated array elements: ";
    for (int i = 0; i < 5; ++i) {
        std::cout << numbers[i] << " ";
    }
    std::cout << std::endl;

    // 4. Calculate array size dynamically
    int size = sizeof(numbers) / sizeof(numbers[0]);
    std::cout << "Array size (number of elements): " << size << std::endl;

    return 0;
}
